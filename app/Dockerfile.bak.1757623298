FROM python:3.12-slimENV PYTHONDONTWRITEBYTECODE=1 \    PYTHONUNBUFFERED=1# --- ODBC runtime + MS ODBC Driver 18 ---RUN apt-get update && apt-get install -y --no-install-recommends \    curl ca-certificates gnupg2 apt-transport-https \    build-essential \    unixodbc libodbc1 unixodbc-dev odbcinst \    libgssapi-krb5-2 \ && rm -rf /var/lib/apt/lists/*# Repo Microsoft para Debian 12 (python:3.12-slim = bookworm)RUN curl -fsSL https://packages.microsoft.com/keys/microsoft.asc \  | gpg --dearmor -o /usr/share/keyrings/microsoft-prod.gpg && \  echo "deb [arch=amd64 signed-by=/usr/share/keyrings/microsoft-prod.gpg] https://packages.microsoft.com/debian/12/prod bookworm main" \  > /etc/apt/sources.list.d/microsoft-prod.list && \  apt-get update && ACCEPT_EULA=Y apt-get install -y --no-install-recommends msodbcsql18 && \  rm -rf /var/lib/apt/lists/*WORKDIR /app# Requisitos PythonCOPY requirements.txt /app/requirements.txtRUN pip install --no-cache-dir -r /app/requirements.txt \ && useradd -m app# CÃ³digoCOPY src /app# Entrypoint (asegurate LF y shebang /bin/sh)COPY entrypoint.sh /entrypoint.shRUN chmod +x /entrypoint.sh && chown -R app:app /appUSER appEXPOSE 8000CMD ["/entrypoint.sh"]