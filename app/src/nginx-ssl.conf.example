events {}

http {
  include       mime.types;
  default_type  application/octet-stream;
  sendfile      on;
  keepalive_timeout 65;

  # Redirect all HTTP to HTTPS
  server {
    listen 80;
    server_name mypos-qa.familiabercomat.com _;
    return 301 https://$host$request_uri;
  }

  server {
    listen 443 ssl http2;
    server_name mypos-qa.familiabercomat.com _;

    # Certificados montados en /etc/ssl/familiabercomat dentro del contenedor
    ssl_certificate     /etc/ssl/familiabercomat/fullchain.pem;
    ssl_certificate_key /etc/ssl/familiabercomat/privkey.pem;
    ssl_protocols       TLSv1.2 TLSv1.3;
    ssl_ciphers         HIGH:!aNULL:!MD5;

    client_max_body_size 20m;

    location /static/ {
      alias /staticfiles/;
      access_log off;
      expires 1y;
      add_header Cache-Control "public, max-age=31536000, immutable";
    }

    location / {
      proxy_pass http://web:8000;
      proxy_http_version 1.1;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_read_timeout 180;
    }
  }
}

